{application, emediaserver,
  [
    {description, "emediaserver"},
    {vsn, "1"},
    {modules, []},
    {registered, [emediaserver_sup]},
    {applications, [
      kernel,
      stdlib,
      cowboy
    ]},
    {mod, {emediaserver_app, []}},
    {env, []},
    {lager, [
      {handlers, [
        {lager_console_backend, info},
        {lager_file_backend, [{file, "error.log"}, {level, error}]},
        {lager_file_backend, [{file, "console.log"}, {level, info}]}
      ]}
    ]}
]}.
